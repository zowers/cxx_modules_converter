    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: main Utils",
            "type": "debugpy",
            "request": "launch",
            "program": "cxx_modules_converter.py",
            "console": "integratedTerminal",
            "args": "-s ~/project/cxx_modules_converter_other_test_data/Utils -d result --parent"
        },
    ]
}